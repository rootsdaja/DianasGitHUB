@model AirplaneTrafficManagement.Models.FlightViewModel
@{
    ViewBag.Title = "EditFlight";
}
<h2>EditFlight</h2>
@using (Html.BeginForm("SaveChanges", "Flight"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.idAirport)
    @Html.HiddenFor(model => model.idRoute)
    @Html.HiddenFor(model => model.idFlight)

    <legend>Edit Parameters</legend>
    <form class="form-inline">
 
        <div class="form-group">
            @Html.LabelFor(p => p.DepartureFromId, new { @class = "control-label" })
            @Html.DropDownList("DepartureFromId", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.ArrivalAtId, new { @class = "control-label" })
            @Html.DropDownList("ArrivalAtId", null, new { @class = "form-control" })
         </div>

        <div class="form-group">
            @Html.LabelFor(model => model.departOn, new { @class = "control-label" })
            @Html.EditorFor(model => model.departOn, new { htmlAttributes = new { @class = "form-control" }})
            @Html.ValidationMessageFor(model => model.departOn)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.returnOn, new { @class = "control-label" })
            @Html.EditorFor(model => model.returnOn, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.returnOn)
        </div>
       
        <input type="submit" class="btn btn-default" value="Submit" />
        
    </form>
}

@using (Html.BeginForm("Index", "Flight"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.idFlight)

    <button type="submit" class="btn btn-default">Back</button>
}
