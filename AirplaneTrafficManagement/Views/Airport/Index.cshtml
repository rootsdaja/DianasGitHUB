@model AirplaneTrafficManagement.Models.AirportViewModel
@{
    ViewBag.Title = "Airports Search Page";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Display all the Airports.</h2>
</hgroup>

<style>
    table, th, td {
        border: 2px solid black;
    }

    th, td {
        padding: 15px;
    }
</style>


<table style="width: 800px">
    <tr>
        <td><b>Id Airport</b></td>
        <td><b>Airport Name</b></td>
        <td><b>City</b></td>
        <td><b>Country</b></td>
        <td><b>State</b></td>
        <td><b>Options</b></td>
    </tr>


    @foreach (var item in Model._airportList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>

            <td>
                @*@{var session = new Common.WebSessionContext();
                    }

                    @if (session.Admin == true)
                    {*@

                <p>@Html.ActionLink("Edit Airport", "EditAirport", "Airport", new { id = item.idAirport }, null) </p>
                <p>@Html.ActionLink("Delete Airport", "DeleteAirport", "Airport", new { id = item.idAirport }, null)</p>
                <p>@Html.ActionLink("Add Airport", "CreateAirport", "Airport", null) </p>

                @*<p>@Html.ActionLink("Movie Details", "movieDetail", "Flight", new { id_detail = item.idFlight }, null)</p>*@
                @*}

                    else
                    {*@

                @*@Html.ActionLink("Flight Details", "movieDetail", "Flight", new { id_detail = item.idFlight }, null)
                    <p>@Html.ActionLink("Reserve Ticket", "CreateTicket", "Flight", new { id = item.idFlight }, null)  </p>*@

                @*}*@

            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("Index", "Flight"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <input type="submit" value="Back To Flights" />
}






