@model AirplaneTrafficManagement.Models.AirportViewModel
@{
    ViewBag.Title = "Airports";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Display all the Airports</h2>
</hgroup>

<table class="table table-bordered table-hover">
    <tr>
        <th><b>Id Airport</b></th>
        <th><b>Airport Name</b></th>
        <th><b>City</b></th>
        <th><b>Country</b></th>
        <th><b>State</b></th>
        <th><b>Options</b></th>
    </tr>


    @foreach (var item in Model.AirportList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idAirport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.airportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>

            <td>
                @*@{var session = new Common.WebSessionContext();
                    }

                    @if (session.Admin == true)
                    {*@

                @Html.ActionLink("Edit", "EditAirport", "Airport", new { id = item.idAirport }, null) |
                @Html.ActionLink("Delete", "DeleteAirport", "Airport", new { id = item.idAirport }, null) |
                @Html.ActionLink("Add", "CreateAirport", "Airport", null) 

                @*<p>@Html.ActionLink("Movie Details", "movieDetail", "Flight", new { id_detail = item.idFlight }, null)</p>*@
                @*}

                    else
                    {*@

                @*@Html.ActionLink("Flight Details", "movieDetail", "Flight", new { id_detail = item.idFlight }, null)
                    <p>@Html.ActionLink("Reserve Ticket", "CreateTicket", "Flight", new { id = item.idFlight }, null)  </p>*@

                @*}*@

            </td>
        </tr>
    }

</table>


  





