@model AirplaneTrafficManagement.Models.RouteViewModel
@{
    ViewBag.Title = "Edit Route";
}
<h2>Edit Route</h2>
@using (Html.BeginForm("saveChanges", "Route"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.idRoute)

        <legend>Edit Parameters</legend>
       <form class="form-inline">
           <div class="form-group">
               @Html.LabelFor(p => p.leavingFrom, new { @class = "control-label" })
               @Html.TextBoxFor(p => p.leavingFrom, new { @class = "form-control" })
            </div>
           <div class="form-group">
               @Html.LabelFor(p => p.goingTo, new { @class = "control-label" })
               @Html.TextBoxFor(p => p.goingTo, new { @class = "form-control" })
           </div>
           <div class="form-group">
               @Html.LabelFor(model => model.leavingHour, new { htmlAttributes = new { @class = "control-label" } })
               @Html.EditorFor(model => model.leavingHour, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.leavingHour)
           </div>
           <div class="form-group">
               @Html.LabelFor(model => model.arrivalHour, new { htmlAttributes = new { @class = "control-label" } })
               @Html.EditorFor(model => model.arrivalHour, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.arrivalHour)
           </div>

           <input type="submit" class="btn btn-default" value="Submit" />
    </form>

}
       @using (Html.BeginForm("Index", "Route"))
       {
           @Html.AntiForgeryToken()
           @Html.ValidationSummary()
           @Html.HiddenFor(model => model.idRoute)

    <input type="submit" class="btn btn-default"  value="Back" />
       }
